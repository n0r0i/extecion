{
  "manifest_version": 3,
  "name": "Meu Web Panel Personalizado",
  "version": "2.0.0",
  "description": "Salve seus sites favoritos para acesso r√°pido.",

  "background": {
    "service_worker": "src/background.js"
  },

  "permissions": [
    "storage",
    "tabs",
    "history",
    "browsingData",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content-scripts/reader.js"]
    }
  ],

  "action": {
    "default_icon": { "48": "src/icons/48x48.png" },
    "default_title": "Meus Sites",
    "default_popup": "src/sidebar/sidebar.html"
  },

  "icons": { "48": "src/icons/48x48.png" },

  "commands": {
    "_execute_action": {
      "suggested_key": { "default": "Alt+Shift+S" }
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' https://cdnjs.cloudflare.com; object-src 'self'; connect-src https://generativelanguage.googleapis.com https://api.openai.com https://openrouter.ai;"
  },

  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}
