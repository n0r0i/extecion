{
  "manifest_version": 2,
  "name": "Meu Web Panel Personalizado",
  "version": "2.0.0",
  "description": "Salve seus sites favoritos para acesso r√°pido na barra lateral.",
  
  "background": {
    "scripts": ["src/background.js"]
  },

  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "history",
    "browsingData",
    "scripting"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content-scripts/reader.js"]
    }
  ],

  "sidebar_action": {
    "default_icon": { "48": "src/icons/48x48.png" },
    "default_title": "Meus Sites",
    "default_panel": "src/sidebar/sidebar.html"
  },

  "icons": { "48": "src/icons/48x48.png" },

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": { "default": "Alt+Shift+S" }
    }
  },
  
  "content_security_policy": "script-src 'self'; object-src 'self'; connect-src https://generativelanguage.googleapis.com https://api.openai.com https://openrouter.ai;"
}